extend ../components/layout.pug

block styles

block title
	title Bulletin Board | AirChat

block content

	section#notices
		.container
			h4.center Bulletin Board

			.row
				.col.s12
					ul.collapsible
					
						li(v-for="notice in notices")
							.collapsible-header {{ notice.title }}

							.collapsible-body
								p {{ notice.body }}
								p Posted by: {{ notice.from.name }}
								p Posted at: {{ notice.date }}
								p
									a.btn(@click="deleteNotice(notice._id)")
										i.material-icons.center.red-text close






block scripts
	script(src="/js/init/bulletin.index.js")