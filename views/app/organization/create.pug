extend ../components/layout.pug

block styles
    link(href='https://fonts.googleapis.com/css?family=Quicksand', rel='stylesheet')
    link(rel="stylesheet", href="/css/organization.css")
    


block title
    title Create Organization | AirChat

block content

    .row(style="background-image:url('/images/backorg.jpg')")
        .col.s12.l4.push-l4
            .card-panel.z-depth-4(style="margin-top:5%;border-radius:35px;")
                
                h3.light.center Airchat
                h5.light.center Create Organization
        
                .row
                    form.col.s12(action='/api/organization/create',method='POST')
                        .row
                            .input-field.col.s12
                                input#name.black-border.validate(type='text', name='name')
                                label(for="name") Name                                    

                            .input-field.col.s12
                                input#location.black-border.validate(type='text', name='location')
                                label(for="location") Location

                            p.col.s12
                                label
                                    input(type="checkbox", name='root')
                                    span Root Organization?
                            .input-field.col.s12
                                select#parent.white-border.validate(type='text', name='parent')
                                    each organization in organizations
                                        option(value=''+organization._id) #{organization.name}
                                label(for="parent") Parent

                            .col.s12.center
                                button.btn.waves-effect.waves-light.bg-secondary.curvy(type='submit', name='action') Submit
